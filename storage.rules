rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read/write for temporary form uploads
    match /temp-uploads/{token}/{filename} {
      // Anyone can upload (max 4MB per file)
      allow write: if request.resource.size < 4 * 1024 * 1024
                      && request.resource.contentType.matches('image/.*');

      // Anyone can read (for preview in form)
      allow read: if true;
    }

    // Brand logos - authenticated users only
    match /logos/{userId}/{filename} {
      allow read: if true; // Public read for logos
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Customer images - authenticated users only
    match /images/{userId}/{customerId}/{filename} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Files - authenticated users only
    match /files/{userId}/{customerId}/{filename} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
