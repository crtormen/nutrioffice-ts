rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /users/{user=**} {
    	allow read, write: if isSignedIn();
    }
    match /users/{userId}/{userData=**} {
    	allow read, write: if isOwner(userId);
    }
    match /users/{userId}/{userData=**} {
    	allow read, write: if isOwner(userId) || isContributor(userId);
    }

    // Customer creation with subscription limit enforcement
    match /users/{userId}/customers/{customerId} {
      allow read: if isOwner(userId) || isContributor(userId);
      allow update, delete: if isOwner(userId) || isContributor(userId);
      allow create: if (isOwner(userId) || isContributor(userId)) && canAddCustomer(userId);
    }

    // Payment rules (global collection)
    match /users/{userId}/payments/{paymentId} {
      allow read, write: if isOwner(userId) || isContributor(userId);
    }

    // Installment rules (global collection)
    match /users/{userId}/installments/{installmentId} {
      allow read, write: if isOwner(userId) || isContributor(userId);
    }

    // Invitation rules
    match /invitations/{invitationId} {
      // Allow reading invitation by anyone (needed for registration flow)
      allow read: if true;

      // Only authenticated users can write
      allow create: if isSignedIn() && isProfessional();
      allow update: if isSignedIn() && (
        isProfessional() ||
        resource.data.status == 'pending' // Allow accepting invitation
      );
      allow delete: if isSignedIn() && isProfessional();
    }

    // Form submission rules (public write-only for creation)
    match /users/{userId}/formSubmissions/{submissionId} {
      // Anyone can create a submission
      allow create: if true;
      // Only owner or contributors can read, update, delete
      allow read, update, delete: if isOwner(userId) || isContributor(userId);
    }

    // Anamnesis token rules (public read for validation)
    match /users/{userId}/anamnesisFormTokens/{type} {
      // Anyone can read to validate tokens
      allow read: if true;
      // Only owner can write
      allow write: if isOwner(userId);
    }

    // Public form settings
    match /users/{userId}/settings/publicForms {
      // Public read for form configuration
      allow read: if true;
      // Only owner or contributors can write
      allow write: if isOwner(userId) || isContributor(userId);
    }


    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
    	return request.auth.uid == userId
    }

    function getRole() {
      return request.auth.token.role;
    }

    function isProfessional() {
      return getRole() == "PROFESSIONAL";
    }

    function getContributors(uid) {
    	return get(/databases/$(database)/documents/users/$(uid)/contributors).data;
    }

    function isContributor(uid) {
    	let contributesTo = request.auth.token.contributesTo;
    	return (
      	getRole() == "COLLABORATOR" &&
        contributesTo == uid &&
        request.auth.uid in getContributors(contributesTo)
        ) ? true : false;
    }

    // Subscription limit functions
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isPermanentFree(userId) {
      let userData = getUserData(userId);
      return userData.permanentFree == true;
    }

    function getCustomerLimit(userId) {
      let userData = getUserData(userId);
      // Permanent free accounts have no limit
      return userData.permanentFree == true ? 999999 :
        // No subscription means free tier (50 customers)
        (userData.subscription == null ? 50 :
          // Get limit based on plan tier
          (userData.subscription.planTier == "free" ? 50 :
           userData.subscription.planTier == "starter" ? 200 :
           userData.subscription.planTier == "professional" ? 500 :
           999999)); // enterprise = unlimited
    }

    function getCurrentCustomerCount(userId) {
      let userData = getUserData(userId);
      return userData.currentCustomerCount != null ? userData.currentCustomerCount : 0;
    }

    function canAddCustomer(userId) {
      // Permanent free accounts can always add
      return isPermanentFree(userId) ? true : getCurrentCustomerCount(userId) < getCustomerLimit(userId);
    }
  }
}